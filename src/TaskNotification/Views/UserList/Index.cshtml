@model IEnumerable<User>
@{
    ViewBag.Title = "Users";
}



<div class="bg-primary panel-body"><h4>List of Users</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-condensed table-bordered">
    <tr><th>User Name</th><th>Email</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No Tasks</td></tr>
    }
    else
    {
        foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Email</td>
                <td>                        
                <a asp-controller="TaskForm" asp-action="TaskForm" asp-route-userId="@m.UserID" class="btn btn-sm btn-primary" >Post Task</a>                     
                </td>
            </tr>
        }
    }
    </table>
