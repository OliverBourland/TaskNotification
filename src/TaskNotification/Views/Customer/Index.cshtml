@model IEnumerable<Customer>
@{
    ViewBag.Title = "Customer";
}

<div class="bg-primary panel-body"><h4>Customers</h4></div>
<div class="text-danger" asp-validation-summary="All"></div>
<table class="table table-condensed table-bordered">
    <tr><th>Customer ID</th><th>Company</th><th>Contact</th><th>Address</th><th>Phone Number</th><th>Email</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No Orders</td></tr>
    }
    else
    {
        foreach (var m in Model)
        {
            <tr>
                <td>@m.CustomerID</td>
                <td>@m.Company</td>
                <td>@m.ContactName</td>
                <td>@m.Address</td>
                <td>@m.PhoneNumber</td>
                <td>@m.Email</td>
            </tr>
        }
    }
</table>